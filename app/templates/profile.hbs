<div class="container">
  <div class="row">
    <div class="col-lg-2 col-md-2 col-sm-2">
      <div class="list-group">
        <button {{action 'showModal' 'profile.labels.new' null 'profile.labels.new'}}>New label</button>
        {{#each session.currentUser.labels as |label|}}
          <div class="list-group-item">
            {{#link-to 'profile.labels.cards' label}}
              {{label.title}}
              <span class="pointer glyphicon glyphicon-chevron-right"></span>
            {{/link-to}}
            <span {{action 'showModal' 'profile.labels.edit' label 'profile.labels'}} class="btn btn-sm btn-primary">edit</span>
          </div>
        {{/each}}
      </div>
    </div>
    <div class="col-lg-10 col-md-10 col-sm-10">
      {{outlet}}
    </div>
  </div>
</div>