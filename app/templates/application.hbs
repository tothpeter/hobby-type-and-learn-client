<h2 id="title">Welcome to Ember.js - With Authentication!</h2>

{{#if session.isAuthenticated}}
  <div class="container">
    <div class="row">
      <div class="col-lg-2 col-md-2 col-sm-2">
        <div class="list-group">
          {{#each session.currentUser.labels as |label|}}
            <div class="list-group-item band-link">
              {{label.title}}
              <span class="pointer glyphicon glyphicon-chevron-right"></span>
            </div>
          {{/each}}
        </div>
      </div>
      <div class="col-lg-10 col-md-10 col-sm-10">
        Hi, {{session.currentUser.email}}
        <br/>
        You can't see this text unless you're logged in!
        <br/>
        Click this button to logout: 
        <button {{action 'invalidateSession'}}>Logout</button>
        <br/>
        If you try to go to the
        {{#link-to "login"}}Login{{/link-to}}
        page, you should get redirected!
      </div>
    </div>
  </div>
  
{{else}}
  {{#link-to "login"}}Login{{/link-to}}
{{/if}}

{{outlet}}
{{outlet 'modal'}}