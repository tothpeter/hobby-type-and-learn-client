{{#my-modal title='New card' ok='createCard' close='removeModal'}}
  <form {{action 'createCard' on='submit'}}>
    <div class="form-group {{has-error-class showErrors errors.model.sideA}}">
      <label class="control-label">Sida A</label>
      {{input class="form-control {{error-class showErrors errors.model.sideA}}" value=model.sideA}}
      {{display-errors errors=errors.model.sideA showErrors=showErrors}}
    </div>
    <div class="form-group {{has-error-class showErrors errors.model.sideB}}">
      <label class="control-label">Sida B</label>
      {{input class="form-control" value=model.sideB}}
      {{display-errors errors=errors.model.sideB showErrors=showErrors}}
    </div>
    <div class="form-group">
      <label>How well do you know it</label>
      {{input class="form-control" value=model.proficiencyLevel}}
    </div>
    <div class="form-group">
      <label>Labels:</label>
      {{select-2
        content=labels
        value=model.labels
        allowClear=true
        optionLabelPath="title"
        placeholder="Add labels"
        multiple="true"
      }}
    </div>
    <input type="submit" class="hidden">
  </form>
{{/my-modal}}