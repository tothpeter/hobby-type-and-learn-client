{{#my-modal title='Edit label' ok='updateCard' close='removeModal' model=model as |component|}}
  <form {{action 'ok' on='submit' target=component}}>
    <div class="form-group">
      <label>Sida A</label>
      {{input class="form-control" value=model.sideA}}
    </div>
    <div class="form-group">
      <label>Sida B</label>
      {{input class="form-control" value=model.sideB}}
    </div>
    <div class="form-group">
      <label>How well do you know it</label>
      {{input class="form-control" value=model.proficiencyLevel}}
    </div>
    <div class="form-group">
      <label>Label:</label>
      {{select-2
        content=labels
        value=selectedLabels
        placeholder="Add labels"
        optionLabelPath="title"
        multiple="true"
      }}
    </div>
    <input type="submit" class="hidden">
  </form>
{{/my-modal}}