{{#my-modal title='Edit card' ok='updateCard' close='cancel' model=model isLoading=isSaving as |component|}}
  <form {{action 'ok' on='submit' target=component}}>
    <div class="form-group {{has-error-class showErrors errors.model.sideA}}">
      <label class="control-label">Side A</label>
      {{input class="form-control" value=model.sideA disabled=isSaving}}
      {{display-errors errors=errors.model.sideA showErrors=showErrors}}
    </div>
    <div class="form-group {{has-error-class showErrors errors.model.sideB}}">
      <label class="control-label">Side B</label>
      {{input class="form-control" value=model.sideB disabled=isSaving}}
      {{display-errors errors=errors.model.sideB showErrors=showErrors}}
    </div>
    <div class="form-group">
      <label>How well do you know it</label>
      {{input class="form-control" value=model.proficiencyLevel disabled=isSaving}}
    </div>
    <div class="form-group">
      <label>Labels:</label>
      {{select-2
        content=labels
        value=selectedLabels
        placeholder="Add labels"
        optionLabelPath="title"
        multiple="true"
        enabled=isNotSaving
      }}
    </div>
    <input type="submit" class="hidden">
  </form>
{{/my-modal}}